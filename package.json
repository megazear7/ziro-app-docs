{
  "name": "ziro-app",
  "version": "1.0.4",
  "description": "A starter kit for creating web apps",
  "main": "index.js",
  "scripts": {
    "serve": "netlify dev",
    "live": "netlify dev --live",
    "app:serve": "web-dev-server --node-resolve --root-dir app --watch",
    "app:build": "rollup -c",
    "netlify:link": "netlify link",
    "docs": "npm run docs:serve",
    "docs:build": "orison build --srcDir docs --buildDir built-docs",
    "docs:serve": "orison serve --srcDir docs",
    "docs:static": "orison static --srcDir docs"
  },
  "keywords": [
    "Ziro",
    "App",
    "Web"
  ],
  "author": "Alex Lockhart",
  "license": "ISC",
  "dependencies": {
    "lit-element": "^2.4.0",
    "orison": "^1.3.4",
    "ziro-components": "^1.0.33",
    "ziro-state": "^1.0.1"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@rollup/plugin-replace": "^2.4.1",
    "netlify-cli": "^3.10.8",
    "node-fetch": "^2.6.1",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.41.0",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-copy-watch": "0.0.1",
    "rollup-plugin-filesize": "^9.1.1",
    "rollup-plugin-terser": "^7.0.2",
    "web-dev-server": "^3.0.22"
  }
}
